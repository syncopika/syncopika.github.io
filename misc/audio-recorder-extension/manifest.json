{
  "name": "audio recorder extension",
  "version": "1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "10.0",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "getAudio.js"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "description": "record audio playing from a tab"
}